<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogonEnd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:background="@drawable/fonleveltwo123"
    android:orientation="vertical"

    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/diologEnd"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btncloseee"
            android:text="X"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/stule_btn_black95_and_true"
            android:textColor="@color/black95"
            android:layout_gravity="end"
            >
        </TextView>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textlevel1string2"
                android:textColor="@color/black95"
                android:textSize="24sp" />

        </ScrollView>


        <Button
            android:id="@+id/btncontinue"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="@drawable/stule_btn_black95_and_true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:text="@string/levelcontinue"
            android:textAllCaps="true"

            android:textColor="@color/black95"
            android:textSize="14sp"

            />




    </LinearLayout>


</LinearLayout>